#! Utilities for handling mutation via effects.

effect mut A = (A -> A) => ()

$[util]
fn mut A : (A -> A) -> mut A ~ () = f => @suspend(f)

$[util]
fn apply A : mut A ~ () -> A -> A =
    # TODO: Why is this hint necessary?
    m : mut A ~ (), x => let (_, x) = (m, x)
        handle mut A with f, x => ((), x -> f)
    in x
